<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/edit_bg" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="2dp">
        <shape>
            <solid android:color="@color/edit_bg" />
            <padding
                android:bottom="0dp"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
        </shape>
    </item>
    <!--图片2-->
    <item
        android:id="@+id/user_face_drawable"
        android:bottom="0dip"
        android:drawable="@drawable/ic_launcher"
        android:left="0dip"
        android:right="0dip"
        android:top="0dip" />
</layer-list>